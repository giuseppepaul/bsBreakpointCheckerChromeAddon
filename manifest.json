{
  "name": "Check Breakpoint",
  "description": "Checks the current breakpoint",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Check breakpoint",
    "default_icon": "icon.png"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "js": ["jquery.js"],
      "matches": [ "http://*/*", "https://*/*"]
    }
  ]  
}